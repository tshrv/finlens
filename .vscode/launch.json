    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend/api",
            "python": "${command:python.interpreterPath}"
        }
    ]
}